{
  "name": "cerebro-api",
  "author": "Angael",
  "version": "0.2.0",
  "type": "module",
  "engines": {
    "node": ">= 18.12.1"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "start:dev": "cross-env NODE_ENV=development tsc-watch --onSuccess \"npm run start\"",
    "start:prod": "cross-env NODE_ENV=production npm run start",
    "db:run": "docker run -it --name cerebro -v \"C:/cerebro/db:/var/lib/mysql\" -p 27017:27017 -e MYSQL_ROOT_PASSWORD=root -d mysql:latest",
    "db:start": "docker start cerebro",
    "prebuild": "rimraf build",
    "build": "cross-env NODE_ENV=production tsc -p tsconfig.json",
    "prisma:seed": "prisma db seed",
    "prisma:generate": "prisma generate",
    "prisma:validate": "prisma validate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "dotenv -e .env.production -- prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "lint": "tsc",
    "ngrok": "ngrok http 3000"
  },
  "prisma": {
    "seed": "npx tsx .\\prisma\\seed.ts"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.12.20",
    "@prisma/client": "4.12",
    "@types/fs-extra": "^9.0.13",
    "@vanih/cerebro-contracts": "0.0.7",
    "@vanih/dunes-node": "3.2.0",
    "async": "^3.2.4",
    "aws-sdk": "^2.1282.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "easy-yt-dlp": "0.7.0",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "fastq": "^1.15.0",
    "fs-extra": "^11.1.0",
    "mime-types": "^2.1.35",
    "modern-async": "^1.1.2",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^4.0.0",
    "node-cache": "^5.1.2",
    "promise-retry": "^2.0.1",
    "sharp": "^0.31.3",
    "winston": "^3.8.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.18",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "~5.39",
    "@typescript-eslint/parser": "~5.39",
    "dotenv-cli": "^7.2.1",
    "eslint": "~8.24",
    "eslint-config-prettier": "~8.5",
    "eslint-plugin-jest": "~27.1",
    "prettier": "3.1.1",
    "prisma": "4.12",
    "rimraf": "~3.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "tslib": "2.5",
    "tsutils": "~3.21",
    "typescript": "^4.9.4"
  }
}
